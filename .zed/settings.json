{
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["!ty", "!pylsp"]
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "allTargets": true,
          "extraEnv": {
            "PYO3_PYTHON": "C:\\Users\\95028\\.conda\\envs\\BIO\\python.exe"
          }
        }
        // If there is a way to set extra environment variables,
